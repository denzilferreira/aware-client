<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pkg_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left" >

    <LinearLayout
        android:id="@+id/pkg_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/pkg_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:maxHeight="77dp"
            android:maxWidth="77dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/pkg_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:maxLines="3"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="plugin title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="9sp" />

        <LinearLayout
            android:id="@+id/pkg_shadow"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/card_shadow"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/pkg_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:maxWidth="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_pkg_download" />

</FrameLayout>
