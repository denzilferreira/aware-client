<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Aware" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#33B5E5</item>
        <item name="colorAccent">#33B5E5</item>
        <item name="colorPrimaryDark">#33B5E5</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Aware_Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#FFFFFF</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#FFFFFF</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">#33B5E5</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>
</resources>